<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_marginStart="20sp"
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一个用户"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/user_onlive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/user_name"
            android:background="@drawable/background_run"
            android:text="在线"
            android:textColor="#10BE80" />

        <ImageView
            android:id="@+id/user_control"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20sp"
            android:src="@drawable/icon_more" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/zhucheriqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册日期："
            android:layout_marginStart="20sp"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022-8-9"
            android:layout_toEndOf="@+id/zhucheriqi"
            android:layout_alignParentBottom="true"
            android:id="@+id/register_time"/>

        <Button
            android:id="@+id/bt_access"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20sp"
            android:background="#E047A7FF"
            android:text="查看权限"
            android:textColor="@color/white" />
    </RelativeLayout>
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="20sp"
         android:layout_marginTop="10dp">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="冻结到：2022-8-15"
             android:id="@+id/user_freeze_time"
             android:layout_alignParentEnd="true"
             android:layout_marginEnd="20sp"
             android:visibility="invisible"/>
     </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"/>
</LinearLayout>
</androidx.cardview.widget.CardView>