<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_marginStart="20sp"
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一个用户"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在线"
            android:background="@drawable/background_run"
            android:textColor="#10BE80"
            android:layout_toEndOf="@+id/user_name"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20sp"
            android:id="@+id/user_control"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20sp">
        <TextView
            android:id="@+id/zhucheriqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册日期："
            android:layout_marginStart="20sp"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022-8-9"
            android:layout_toEndOf="@+id/zhucheriqi"
            android:layout_alignParentBottom="true"
            android:id="@+id/register_time"/>

        <Button
            android:id="@+id/bt_access"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20sp"
            android:background="#E047A7FF"
            android:text="查看权限"
            android:textColor="@color/white" />
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"/>
</LinearLayout>
</androidx.cardview.widget.CardView>