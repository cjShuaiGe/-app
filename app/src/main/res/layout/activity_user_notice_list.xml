<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserNoticeListActivity"
    android:orientation="vertical"
    android:background="#F2F3F3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/icon_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息列表"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="35dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一个项目"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请你成为发布者"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="88dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址:"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxxxxxxxxxxxxxxxxx"
            android:textColor="#E047A7FF"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="35dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介：这是一个项目的简介"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"/>

        <Button
            android:id="@+id/bt_yes01"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_corner"
            android:text="同意"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <Button
            android:id="@+id/bt_no01"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="拒绝"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="@drawable/button_corner"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="40dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="一个项目"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="20dp"
            android:text="请求删除项目"
            android:textSize="16dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/bt_yes02"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/button_corner"
            android:text="同意"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="270dp"/>

        <Button
            android:id="@+id/bt_no02"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="拒绝"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="@drawable/button_corner"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="15dp"/>

    </RelativeLayout>

</LinearLayout>