<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjectMonitoringApp" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">#F4F4F4</item>
    </style>
    <style name="Theme.Response" parent="Theme.ProjectMonitoringApp">
        <!--图片路径-->
        <item name="android:windowBackground">@drawable/actionpicture</item>
        <!--设置全屏-->
        <item name="android:windowFullscreen">true</item>
        <!--设置透明隐藏顶部栏-->
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>